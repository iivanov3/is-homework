@model List<TicketsApp.Domain.DomainModels.Order>

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Order history</h1>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Order #</th>
                <th scope="col">Order ID</th>
                <th scope="col">Ordered on</th>
                <th scope="col">Total price</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody> 
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                double price = 0.0;
                @foreach (var ticket in item.TicketsInOrder)
                {
                    price += (ticket.Quantity * ticket.Ticket.Price);
                }

                <tr>
                    <td>@(i + 1)</td>
                    <td>@item.Id</td>
                    <td>@item.OrderedOn</td>
                    <td>$@price</td>
                    <td><a asp-action="Details" asp-route-orderId="@item.Id">Details</a></td>
                </tr>
            }
        </tbody>

        <tfoot>
            <tr>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </tfoot>
    </table>
</div>